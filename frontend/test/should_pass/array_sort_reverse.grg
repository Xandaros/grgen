#using "array_sort_reverse_model.gm"

rule sortReverseInt(ref a:array<int>) {
	if {
		a.sort() == a.reverse();
	}		
	
	modify {
		eval {
			def ref aa:array<int> = a.sort();
			aa = a.reverse();
		}		
	}
}

