using attrib_model_001;

rule r {
	ni : NINT;
	nf : NFLOAT;
	nd : NDOUBLE;
	-ei:EINT->;
	-ef:EFLOAT->;
	-ed:EDOUBLE->;
	
	if {
		ni.a == min(ei.a, ni.a);
		nf.a == min(ef.a, nf.a);
		nd.a == min(ed.a, nd.a);
		
		ni.a == max(ei.a, ni.a);
		nf.a == max(ef.a, nf.a);
		nd.a == max(ed.a, nd.a);
	}

	modify {
		eval {
			ni.a = min(ei.a, ni.a);
			nf.a = min(ef.a, nf.a);
			nd.a = min(ed.a, nd.a);

			ni.a = max(ei.a, ni.a);
			nf.a = max(ef.a, nf.a);
			nd.a = max(ed.a, nd.a);
		}
	}
}

