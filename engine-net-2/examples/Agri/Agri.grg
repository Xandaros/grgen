using AgriModel;

rule repRule(f:Farmer) : (Apple) {
  f -sa:Sees-> a:Apple\ToffeeApple
    <-t:AntTrail- h:AntHill <-s:Sees- f;
  if { typeof(a) > Apple;
       f.angry == true; }
  negative {
    hom(f,o);
    h <-:Sees- o:Farmer -:Sees-> f;
  }

  replace {
    a <-fan:Fancies<sa>- f -s-> h;

/* modify {
    delete(t);
    -fan:Fancies<sa>->;*/

    n:typeof(a) <-:Sees- f;
    eval {
      f.angry = false;
      n.worms = a.worms + h.size / 13;
    }
    return (a);
  }
}
